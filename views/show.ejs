<% include ./partials/header %>

<div class="ui grid">
  <div class="six wide column">
      <img class="ui large image" src="<%= blog.image%>" alt="Default campsite"/>
      <a href="/blogs"><h4>Back</h4></a>
  </div>
  <div class="ten wide column">
    <h4 class="card-title"><%= blog.title %></h4>
    <p class="card-text"><%= blog.body %></p>
    <p><%= blog.created.toDateString() %></p>
    <div class="ui grid">
      <div class="two wide column">
        <a href="/blogs/<%= blog.id%>/edit"><button class="ui inverted primary button">Edit</button></a>
      </div>
      <div class="two wide column">
        <form action="/blogs/<%= blog.id %>?_method=DELETE" method="POST">
          <button class="ui inverted red button" type="submit">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>

<% include ./partials/footer %>
