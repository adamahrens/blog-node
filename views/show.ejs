<% include ./partials/header %>

<div class="ui grid">
  <div class="six wide column">
      <img class="ui large image" src="<%= blog.image%>" alt="Default campsite"/>
      <a href="/blogs"><h4>Back</h4></a>
  </div>
  <div class="ten wide column">
    <h4 class="card-title"><%= blog.title %></h4>
    <p class="card-text"><%= blog.body %></p>
    <p><%= blog.created.toDateString() %></p>
    <button class="ui inverted primary button"><a href="/blogs/<%= blog.id%>/edit">Edit</a></button>
  </div>
</div>

<% include ./partials/footer %>
